<wsp:Policy xmlns:wsp="http://www.w3.org/2006/07/ws-policy">
 <wsp:ExactlyOne>
  <wsp:All>
   <sopa:Authentication xmlns:sopa="http://types.sopware.org/qos/SOPAssertions/1.1"
     type="UsernameToken" message="request"/>
   <sopa:CustomValidation xmlns:sopa="http://types.sopware.org/qos/SOPAssertions/1.1"
     destination="provider" schemaId="legacyRequest.xsd" message="request"
     schemaSourcePath="Location=Bonn/Application=LibraryServiceProviderAPP"/>
   <sopa:Authorization location="provider" xmlns:sopa="http://types.sopware.org/qos/SOPAssertions/1.1"/>
   <wsp:ExactlyOne>
    <sopa:HttpTransport xmlns:sopa="http://types.sopware.org/qos/SOPAssertions/1.1"/>
    <sopa:HttpsTransport xmlns:sopa="http://types.sopware.org/qos/SOPAssertions/1.1"/>
    <sopa:JmsTransport xmlns:sopa="http://types.sopware.org/qos/SOPAssertions/1.1"/>
   </wsp:ExactlyOne>
   <sopa:Extension name="SpecialEncryption" value="high" xmlns:sopa="http://types.sopware.org/qos/SOPAssertions/1.1"/>
   <sopa:Extension name="SpecialSignature" value="all" xmlns:sopa="http://types.sopware.org/qos/SOPAssertions/1.1"/>
   <sopa:Transformation destination="consumer" message="request" ruleId="migrationRequest.xslt" ruleSourcePath="Location=Bonn/Application=TestServiceConsumerAPP" xmlns:sopa="http://types.sopware.org/qos/SOPAssertions/1.1"/>
   <sopa:Transformation destination="consumer" message="response" ruleId="migrationResponse.xslt" ruleSourcePath="Location=Bonn/Application=TestServiceConsumerAPP" xmlns:sopa="http://types.sopware.org/qos/SOPAssertions/1.1"/>
   <sopa:MaxResponseTime location="consumer" value="4000" xmlns:sopa="http://types.sopware.org/qos/SOPAssertions/1.1"/>
   <sopa:TrackingLevel value="operation" xmlns:sopa="http://types.sopware.org/qos/SOPAssertions/1.1"/>
  </wsp:All>
 </wsp:ExactlyOne>
</wsp:Policy>