<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
	<xs:element name="config">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="AuthenticationProcessor">
					<xs:complexType>
						<xs:sequence>
							<xs:element name="CredentialLoginType">
								<xs:simpleType>
									<xs:restriction base="xs:string">
										<xs:enumeration value="auth-id-password"/>
									</xs:restriction>
								</xs:simpleType>
							</xs:element>
							<xs:element name="AssertionLoginType">
								<xs:simpleType>
									<xs:restriction base="xs:string">
										<xs:enumeration value="auth-token-checking"/>
									</xs:restriction>
								</xs:simpleType>
							</xs:element>
							<xs:element name="LdapURL" type="xs:anyURI"/>
							<xs:element name="JAASConfigFile" type="xs:string"/>
						</xs:sequence>
						<xs:attribute name="name" type="xs:string" use="optional" default="default"/>
					</xs:complexType>
				</xs:element>
				<xs:element name="AuthorizationProcessor">
					<xs:complexType>
						<xs:sequence>
							<xs:element name="KeystorePassword" type="xs:string"/>
						</xs:sequence>
						<xs:attribute name="name" type="xs:string" use="optional" default="default"/>
					</xs:complexType>
				</xs:element>
				<xs:element name="SigningProcessor">
					<xs:complexType>
						<xs:sequence>
							<xs:element name="CheckCertificateValidity" type="xs:boolean"/>
							<xs:element name="CheckCertificateIssuerTrust" type="xs:boolean"/>
							<xs:element name="CheckCertificateSignature" type="xs:boolean"/>
							<xs:element name="CheckCertificateRevocation" type="xs:boolean"/>
							<xs:element name="KeyStorePassword" type="xs:string"/>
							<xs:element name="KeyPassword" type="xs:string"/>
						</xs:sequence>
						<xs:attribute name="name" type="xs:string" use="optional" default="default"/>
					</xs:complexType>
				</xs:element>
				<xs:element name="ContextStore">
					<xs:complexType>
						<xs:sequence>
							<xs:element name="LdapURL" type="xs:anyURI"/>
							<xs:element name="LdapUser" type="xs:string"/>
							<xs:element name="LdapPassword" type="xs:string"/>
						</xs:sequence>
						<xs:attribute name="name" type="xs:string" use="optional" default="default"/>
					</xs:complexType>
				</xs:element>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
</xs:schema>
