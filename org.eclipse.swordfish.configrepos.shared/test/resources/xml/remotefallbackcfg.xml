<configuration xmlns:sopcs="http://schemas.sopware.org/configuration/generic/1.0">
    <Kernel name="default">
        <MinThreadCount>5</MinThreadCount>
        <MaxThreadCount>10</MaxThreadCount>
    </Kernel>
    <AuthorizationProcessor sopcs:name="default">
        <ExpiryClearance>20</ExpiryClearance>
        <ClientExpiry>false</ClientExpiry>
        <ClientVerification>false</ClientVerification>
    </AuthorizationProcessor>
    <AuthenticationProcessor sopcs:name="default">
        <UsernameTokenSupportOperation>
            <Operation value="seekBook"/>
        </UsernameTokenSupportOperation>
    </AuthenticationProcessor>
	<PolicyRouter sopcs:name="default">
        <!-- Defines whether agreed policies should be checked for expiry -->
        <PolicyExpiryCheck>false</PolicyExpiryCheck>
        <!-- Grace period in seconds to consider when checking for policy expiry -->
        <PolicyExpiryGracePeriod>600</PolicyExpiryGracePeriod>
    </PolicyRouter>
    <PolicyResolver sopcs:name="default">
        <PolicyMap>
            <Policy>
                <Key>FastAndFurious</Key>
                <Resource>consumer.ppdx</Resource>
            </Policy>
            <Policy>
                <Key>DefaultConsumerPolicy</Key>
                <Resource>consumer.ppdx</Resource>
            </Policy>
            <Policy>
                <Key>StandardPolicy</Key>
                <Resource>consumer.ppdx</Resource>
            </Policy>
        </PolicyMap>
        <DefaultPolicyName>StandardPolicy</DefaultPolicyName>
        <UseDefaultConsumerPolicy>false</UseDefaultConsumerPolicy>
        <DefaultConsumerPolicyName>DefaultConsumerPolicy</DefaultConsumerPolicyName>
    </PolicyResolver>
    
    <!-- REMEMBER TO UPDATE THE INSTALLER TEMPLATE FILE -->
    <CallbackEndpointMapping sopcs:name="default">
        <map>
            <Callback>{http://www.sopware.org/demos/Library/1.0}LibraryConsumer</Callback>
            <Endpoint>{http://www.sopware.org/demos/Library/1.0_binding}LibraryConsumerService</Endpoint>
        </map>
        <!--map>
            <Callback>{the_cdx_portTypeNS}the_cdx_portTypeLocalPart</Callback>
            <Endpoint>{ServiceNS_defined_in_localEndpoints}and_its_LocalPart</Endpoint>
