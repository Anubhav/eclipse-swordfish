<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://schemas.sopware.org/sbb/configuration/core/2.1.0/bootstrap_cfg.xsd"
	xmlns:sbbeprr="http://schemas.sopware.org/sbb/configuration/1.0/eprresolver.remote.xsd"
	xmlns:sbbdcl="http://schemas.sopware.org/sbb/configuration/1.0/dclistener.remote.xsd"
	xmlns:sbbgca="http://schemas.sopware.org/sbb/configuration/1.0/gcadmin.remote.xsd"
	xmlns:sbbmnl="http://schemas.sopware.org/sbb/configuration/1.0/mngt_nlistener.remote.xsd"
	xmlns:sbbfap="http://schemas.sopware.org/sbb/configuration/1.0/fileappender.remote.xsd"
	xmlns:sbbnrp="http://schemas.sopware.org/sbb/configuration/1.0/nrpublisher.remote.xsd"
	xmlns:sbbema="http://schemas.sopware.org/sbb/configuration/1.0/emadapter.remote.xsd"
	xmlns:sbbhpm="http://schemas.sopware.org/sbb/configuration/1.0/hpmngtadapter.remote.xsd"
	xmlns:sbbsnmp="http://schemas.sopware.org/sbb/configuration/1.0/snmppublisher.remote.xsd"
	xmlns:sbbhttp="http://schemas.sopware.org/sbb/configuration/1.0/httpclientconfig.remote.xsd"
	xmlns:sbbjms="http://schemas.sopware.org/sbb/configuration/1.0/jmsclientconfig.remote.xsd"
	xmlns:sbbloc="http://schemas.sopware.org/sbb/configuration/1.0/locator.remote.xsd"
	xmlns:sbbcm="http://schemas.sopware.org/sbb/configuration/1.0/configmngr.local.xsd"
	xmlns:sopcrg="http://schemas.sopware.org/configuration/generic/1.0">

	<sbbeprr:EndpointReferenceResolver>
		<sbbeprr:enableLocalLoopback>false</sbbeprr:enableLocalLoopback>
		<sbbeprr:defaultTransport>HTTP</sbbeprr:defaultTransport>
	</sbbeprr:EndpointReferenceResolver>

	<sbbdcl:DeliveryChannelListenerBean>
		<sbbdcl:threadSleepTime>100</sbbdcl:threadSleepTime>
		<sbbdcl:acceptedTimeout>10</sbbdcl:acceptedTimeout>
		<sbbdcl:minThreadCount>5</sbbdcl:minThreadCount>
		<sbbdcl:maxThreadCount>100</sbbdcl:maxThreadCount>
	</sbbdcl:DeliveryChannelListenerBean>
	<sbbgca:GeneralCacheAdministrator>
		<sbbgca:cache>
			<sbbgca:memory>true</sbbgca:memory>
		</sbbgca:cache>
	</sbbgca:GeneralCacheAdministrator>

	<sbbmnl:ManagementNotificationListener>
		<sbbmnl:ProcessingInterval>1000</sbbmnl:ProcessingInterval>
		<sbbmnl:DirectProcessing>false</sbbmnl:DirectProcessing>
	</sbbmnl:ManagementNotificationListener>
	<sbbfap:FileAppender>
		<sbbfap:NamePattern>
			d:\SOPwareSP4\ServiceBackbone/log/sbb_operations%g.log
		</sbbfap:NamePattern>
		<sbbfap:Limit>50000</sbbfap:Limit>
		<sbbfap:Count>3</sbbfap:Count>
	</sbbfap:FileAppender>
	<sbbnrp:NrPublisher>
		<sbbnrp:ActivateSbb>false</sbbnrp:ActivateSbb>
		<sbbnrp:ActivateHttp>false</sbbnrp:ActivateHttp>
		<sbbnrp:Url>
			http://localhost:18380/management-tools-nr
		</sbbnrp:Url>
		<sbbnrp:MessageThreshold>100</sbbnrp:MessageThreshold>
		<sbbnrp:ProcessingInterval>60000</sbbnrp:ProcessingInterval>
		<sbbnrp:MaxMessages>1000</sbbnrp:MaxMessages>
		<sbbnrp:Activate>false</sbbnrp:Activate>
	</sbbnrp:NrPublisher>
	<sbbema:EmAdapter>
		<sbbema:Port>18342</sbbema:Port>
		<sbbema:Host>$DEFAULT</sbbema:Host>
		<sbbema:Username>ElementManager</sbbema:Username>
		<sbbema:Password>
			e5e9fa1ba31ecd1ae84f75caaa474f3a663f05f4
		</sbbema:Password>
		<sbbema:Activate>true</sbbema:Activate>
	</sbbema:EmAdapter>
	<sbbhpm:HPManagementAdapter>
		<sbbhpm:Activate>false</sbbhpm:Activate>
		<sbbhpm:ImplClass>org.sopware.management.adapter.extension.HPManagementAdapterImpl</sbbhpm:ImplClass>
		<sbbhpm:ConfigLocation>
			JMXRMIConnectorConfig
		</sbbhpm:ConfigLocation>
	</sbbhpm:HPManagementAdapter>
	<sbbsnmp:SnmpPublisher>
		<sbbsnmp:Activate>false</sbbsnmp:Activate>
		<sbbsnmp:ImplClass>org.sopware.management.adapter.extension.SnmpAdapterImpl</sbbsnmp:ImplClass>
		<sbbsnmp:TargetHost>localhost</sbbsnmp:TargetHost>
		<sbbsnmp:TargetPort>1313</sbbsnmp:TargetPort>
		<sbbsnmp:MipLocation>
			sbb-management-mib.txt
		</sbbsnmp:MipLocation>
	</sbbsnmp:SnmpPublisher>
	<sbbhttp:HttpClientConfiguration>
		<!-- HTTP connection timeout in seconds -->
		<sbbhttp:connectionTimeout>600</sbbhttp:connectionTimeout>
		<!-- HTTP proxy enable/disable -->
		<sbbhttp:httpProxyEnable>false</sbbhttp:httpProxyEnable>
		<!-- HTTP proxy hostname to use -->
		<sbbhttp:httpProxyHost>localhost</sbbhttp:httpProxyHost>
		<!-- HTTP proxy port to use -->
		<sbbhttp:httpProxyPort>8080</sbbhttp:httpProxyPort>
		<!-- HTTP proxy user name -->
		<sbbhttp:httpProxyUsername>proxy</sbbhttp:httpProxyUsername>
		<!-- HTTP proxy password -->
		<sbbhttp:httpProxyPassword>proxy</sbbhttp:httpProxyPassword>
		<!-- File name of the keystore to use for client authentication -->
		<sbbhttp:sslKeystore>keys.jks</sbbhttp:sslKeystore>
		<!-- Password to access keystore for client authentication -->
		<sbbhttp:sslKeystorePassword>
			password
		</sbbhttp:sslKeystorePassword>
		<!-- File name of the truststore to use for server certificate validation -->
		<sbbhttp:sslTruststore>certs.jks</sbbhttp:sslTruststore>
		<!-- Path relative to engine installation directory, all filenames are interpreted as being relative to this -->
		<sbbhttp:baseDir>conf/transport</sbbhttp:baseDir>
	</sbbhttp:HttpClientConfiguration>

	<sbbjms:JMSClientConfiguration>
		<!-- JMS connection timeout in seconds -->
		<sbbjms:connectionTimeout>60</sbbjms:connectionTimeout>
	</sbbjms:JMSClientConfiguration>

	<!-- start using the locator -->
	<sbbloc:Locator activate="false"/>

	<sbbcm:ConfigurationRepositoryManager>
		<sbbcm:LibraryID>reserved</sbbcm:LibraryID>
		<!-- sbbcm:SkipRemoteConfigCall>true</sbbcm:SkipRemoteConfigCall-->
		<!--  sbbcm:Location>Bonn</sbbcm:Location-->
		<!-- Timeout for synchronous communication with the configuration repository (ms). -->
		<sbbcm:CommunicationTimeout>30000</sbbcm:CommunicationTimeout>
		<!-- Host and port of the configuration repository -->
		<sbbcm:ConfigurationRepositoryUrl>
			http://localhost:8080/soap/ConfigurationRuntimeProvider
		</sbbcm:ConfigurationRepositoryUrl>
	</sbbcm:ConfigurationRepositoryManager>
</configuration>
