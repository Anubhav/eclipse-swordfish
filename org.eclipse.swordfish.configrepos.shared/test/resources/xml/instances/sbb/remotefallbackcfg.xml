<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://schemas.sopware.org/configuration/core/instance.remote/2.1.0"
	xmlns:sbbap="http://schemas.sopware.org/configuration/core/authorizationproc.remote/1.0"
	xmlns:sbbpr="http://schemas.sopware.org/configuration/core/policyrouter.remote/1.0"
	xmlns:sbbpre="http://schemas.sopware.org/configuration/core/policyresolver.remote/1.0"
	xmlns:sbbrctx="http://schemas.sopware.org/configuration/core/ldap.ctxstore.remote/1.0"
	xmlns:sbbsrpr="http://schemas.sopware.org/configuration/core/servregproxy.remote/1.0"
	xmlns:sbbcem="http://schemas.sopware.org/configuration/core/callbackendmap.remote/1.0"
	xmlns:sbblep="http://schemas.sopware.org/configuration/core/localendpoint.remote/1.0"
	xmlns:sbbtran="http://schemas.sopware.org/configuration/core/transformation.remote/1.0"
	xmlns:sbbvali="http://schemas.sopware.org/configuration/core/validation.remote/1.0"
	xmlns:sopcs="http://schemas.sopware.org/configuration/generic/1.0">

	<sbbap:AuthorizationProcessor sopcs:name="default">
		<sbbap:ExpiryClearance>20</sbbap:ExpiryClearance>
		<sbbap:ClientExpiry>false</sbbap:ClientExpiry>
		<sbbap:ClientVerification>false</sbbap:ClientVerification>
	</sbbap:AuthorizationProcessor>

	<sbbrctx:ContextStore sopcs:name="default">
		<sbbrctx:StoreType>ldap</sbbrctx:StoreType>
		<sbbrctx:LdapURL>ldap://localhost:389/ou=DataServiceBackbone,o=SOPware</sbbrctx:LdapURL>
	</sbbrctx:ContextStore>

	<sbbpr:PolicyRouter sopcs:name="default">
		<sbbpr:PolicyExpiryCheck>false</sbbpr:PolicyExpiryCheck>
		<sbbpr:PolicyExpiryGracePeriod>600</sbbpr:PolicyExpiryGracePeriod>
	</sbbpr:PolicyRouter>

	<sbbpre:PolicyResolver sopcs:name="default"
		defaultConsumerPolicyName="DefaultConsumerPolicy"
		useDefaultConsumerPolicy="true">
		<sbbpre:PolicyMap>
			<sbbpre:Policy name="DefaultConsumerPolicy">
				<sbbpre:PolicyId>http://types.sopware.org/qos/ParticipantPolicy/1.1/StandardTspConsumer</sbbpre:PolicyId>
			</sbbpre:Policy>
			<sbbpre:Policy name="StandardPolicy">
				<sbbpre:PolicyId>http://types.sopware.org/qos/ParticipantPolicy/1.1/StandardSecureConsumer</sbbpre:PolicyId>
			</sbbpre:Policy>
		</sbbpre:PolicyMap>
	</sbbpre:PolicyResolver>

	<sbbsrpr:ServiceRegistryProxy sopcs:name="default" cachingEnabled="true" />

	<sbblep:LocalEndpoints sopcs:name="default">
	</sbblep:LocalEndpoints>

	<sbbtran:Transformation sopcs:name="default"/>
	<sbbvali:Validation sopcs:name="default"/>
	
</configuration>
