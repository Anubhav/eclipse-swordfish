<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	xmlns="http://schemas.sopware.org/authorization.remote/1.0"

	xmlns:sopcs="http://schemas.sopware.org/configuration/generic/1.0"
	xmlns:sopldap="http://schemas.sopware.org/configuration/tsp_ldap.remote/1.0"
	xmlns:sopsaml="http://schemas.sopware.org/configuration/tsp_saml/1.0"
	xmlns:sopsan="http://schemas.sopware.org/configuration/tsp_sanity/1.0"

	xmlns:target="http://schemas.sopware.org/authorization.remote/1.0"
	targetNamespace="http://schemas.sopware.org/authorization.remote/1.0"

	elementFormDefault="qualified">

	<xs:annotation>
		<xs:documentation>
			This is the remote / fallback configuration
			for the authorization and privilege management TSPs.
		</xs:documentation>
	</xs:annotation>

	<!--
		Import all components for the configuration 
	-->
	<xs:import
		namespace="http://schemas.sopware.org/configuration/generic/1.0"
		schemaLocation="../generic.xsd"/>
	<xs:import
		namespace="http://schemas.sopware.org/configuration/tsp_ldap.remote/1.0"
		schemaLocation="./components/tsp_conf_ldap.remote.xsd"/>
	<xs:import
		namespace="http://schemas.sopware.org/configuration/tsp_saml/1.0"
		schemaLocation="./components/tsp_conf_saml.xsd"/>
	<xs:import
		namespace="http://schemas.sopware.org/configuration/tsp_sanity/1.0"
		schemaLocation="./components/tsp_conf_sanity.xsd"/>

	<!--
		TSP specific elements
	-->
	<xs:element name="configuration">
		<xs:complexType>
			<xs:choice minOccurs="0" maxOccurs="unbounded">
				<xs:element ref="sopcs:AbstractComponentElement"/>
			</xs:choice>
		</xs:complexType>
		<xs:unique name="LdapIdentity">
			<xs:selector xpath="sopldap:ldap"/>
			<xs:field xpath="@sopcs:name"/>
			<xs:field xpath="@sopcs:version"/>
		</xs:unique>
		<xs:unique name="SamlIdentity">
			<xs:selector xpath="sopsaml:saml"/>
			<xs:field xpath="@sopcs:name"/>
			<xs:field xpath="@sopcs:version"/>
		</xs:unique>
		<xs:unique name="SanityIdentity">
			<xs:selector xpath="sopsan:sanitycheck"/>
			<xs:field xpath="@sopcs:name"/>
			<xs:field xpath="@sopcs:version"/>
		</xs:unique>
	</xs:element>

</xs:schema>
