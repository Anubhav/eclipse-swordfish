<xs:schema
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    elementFormDefault="qualified"
    targetNamespace="http://schemas.sopware.org/sbb/configuration/1.0/eprresolver.remote.xsd"
    xmlns:sopcs="http://schemas.sopware.org/configuration/generic/1.0"
    xmlns:sbbeprr="http://schemas.sopware.org/sbb/configuration/1.0/eprresolver.remote.xsd">

    <xs:import
        namespace="http://schemas.sopware.org/configuration/generic/1.0"
        schemaLocation="../../generic.xsd"/>

    <xs:simpleType
        name="TransportChoiceSimpleType">
        <xs:restriction
            base="xs:string">
            <xs:enumeration
                value="HTTP"/>
            <xs:enumeration
                value="JMS"/>
        </xs:restriction>
    </xs:simpleType>

    <xs:complexType
        name="TransportChoiceElementType"
        mixed="true">
        <xs:simpleContent>
            <xs:extension
                base="sbbeprr:TransportChoiceSimpleType">
                <xs:attributeGroup
                    ref="sopcs:elementMetaAttribGroup"/>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>

    <xs:complexType
        name="EndpointReferenceResolverType">
        <xs:complexContent>
            <xs:extension
                base="sopcs:ComponentType">
                <xs:all>
                    <xs:element
                        name="enableLocalLoopback"
                        type="sopcs:unnamedBooleanElementType"
                        default="false"/>
                    <xs:element
                        name="defaultTransport"
                        type="sbbeprr:TransportChoiceSimpleType"
                        default="HTTP"> </xs:element>
                </xs:all>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:element
        name="EndpointReferenceResolver"
        type="sbbeprr:EndpointReferenceResolverType"
        substitutionGroup="sopcs:AbstractComponentElement"/>

    <!-- 
        Don't use this for regular instantiation! This is just a mechanism to support
        the interface of the configuration repository service provider. 
    -->
    <xs:element
        name="configuration">
        <xs:complexType>
            <xs:choice
                minOccurs="1"
                maxOccurs="unbounded">
                <xs:element
                    ref="sbbeprr:EndpointReferenceResolver"/>
            </xs:choice>
        </xs:complexType>
    </xs:element>

</xs:schema>
