<xs:schema
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    elementFormDefault="qualified"
    targetNamespace="http://schemas.sopware.org/sbb/configuration/1.0/policyresolver.remote.xsd"
    xmlns:sopcs="http://schemas.sopware.org/configuration/generic/1.0"
    xmlns:sbbpres="http://schemas.sopware.org/sbb/configuration/1.0/policyresolver.remote.xsd">

    <xs:import
        namespace="http://schemas.sopware.org/configuration/generic/1.0"
        schemaLocation="../../generic.xsd"/>

    <xs:complexType
        name="PolicyResolverComponentType">
        <xs:complexContent>
            <xs:extension
                base="sopcs:ComponentType">
                <xs:all>
                    <xs:element
                        name="PolicyMap"
                        type="sbbpres:PolicyMapElementType"/>
                </xs:all>
                <xs:attribute
                    name="defaultPolicyName"
                    type="xs:NCName"/>
                <xs:attribute
                    name="defaultConsumerPolicyName"
                    type="xs:NCName"/>
                <xs:attribute
                    name="useDefaultConsumerPolicy"
                    type="xs:boolean"/>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>

    <xs:complexType
        name="PolicyMapElementType">
        <xs:choice>
            <xs:element
                maxOccurs="unbounded"
                name="Policy"
                type="sbbpres:PolicyElementType"/>
        </xs:choice>
        <xs:attributeGroup
            ref="sopcs:elementMetaAttribGroup"/>
    </xs:complexType>

    <xs:complexType
        name="PolicyElementType">
        <xs:all>
            <xs:element
                name="Resource"
                type="sopcs:unnamedStringElementType"/>
        </xs:all>
        <xs:attribute
            name="name"
            type="xs:NCName"/>
        <xs:attributeGroup
            ref="sopcs:elementMetaAttribGroup"/>
        <!-- xs:attribute name="resource" type="xs:NCName"/ -->
    </xs:complexType>

    <xs:element
        name="PolicyResolver"
        type="sbbpres:PolicyResolverComponentType"
        substitutionGroup="sopcs:AbstractComponentElement"/> 

    <!-- 
        Don't use this for regular instantiation! This is just a mechanism to support
        the interface of the configuration repository service provider. 
    -->
    <xs:element
        name="configuration">
        <xs:complexType>
            <xs:sequence
                minOccurs="1"
                maxOccurs="unbounded">
                <xs:element
                    ref="sbbpres:PolicyResolver"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

</xs:schema>
