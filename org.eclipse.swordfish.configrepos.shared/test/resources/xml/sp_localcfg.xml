<localConfig xmlns:sopcs="http://schemas.sopware.org/configuration/generic/1.0">
    <config>
        <!-- URL under which the Service Registry listens for HTTP GET requests e.g. to retrieve an annotation. -->
        <init-param sopcs:name="sr.get.base.url" value="http://localhost:8080/ServiceRegistry/servlet"/>
        <!-- URL under which the Service Registry listens for HTTP POST requests. -->        
        <init-param sopcs:name="sr.post.base.url" value="http://localhost:8080/ServiceRegistry/servlet/"/>
        <!-- UDDI username -->
        <init-param sopcs:name="uddi.user.name" value="uddiWriter"/>
        <!-- Password for uddi.user.name -->
        <init-param sopcs:name="uddi.user.pwd" value="admin"/>
        <!-- UDDI username for admin -->
        <init-param sopcs:name="uddi.admin.name" value="uddiWriter"/>
        <!-- Password for uddi.admin.name -->
        <init-param sopcs:name="uddi.admin.pwd" value="admin"/>
        <!-- URL to Inquiry API of underlying UDDI server. -->
        <init-param sopcs:name="uddi.api.urlstring.inquiry" value="http://localhost:8080/uddi/services/inquiry"/>
        <!-- URL to Publication API of underlying UDDI server. -->
        <init-param sopcs:name="uddi.api.urlstring.publication" value="http://localhost:8080/uddi/services/publication"/>
        <!-- URL to Security API of underlying UDDI server. -->
        <init-param sopcs:name="uddi.api.urlstring.security" value="http://localhost:8080/uddi/services/security"/>
        <!-- URL to Custody API of underlying UDDI server. -->
        <init-param sopcs:name="uddi.api.urlstring.custody" value="http://localhost:8080/uddi/services/custody"/>
        <!-- LDAP server hostname -->
        <init-param sopcs:name="storage.ldap.host" value="localhost"/>
        <!-- LDAP server port -->
        <init-param sopcs:name="storage.ldap.port" value="389"/>
        <!-- LDAP user bindingDN -->
        <init-param sopcs:name="storage.ldap.bindingDN" value="cn=serverUser,ou=users,o=sop.sbb.org"/>
        <!-- LDAP user password -->
        <init-param sopcs:name="storage.ldap.password" value="admin"/>
        <!-- LDAP base dn used for bind and as root for search -->
        <init-param sopcs:name="storage.ldap.baseDN" value="o=sop.sbb.org"/>
        <!-- LDAP container name for content -->
        <init-param sopcs:name="storage.ldap.containerName" value="ou=storage"/>
		<!-- Policy load directory -->
		<init-param sopcs:name="policy.load.directory" value="c:\temp\loaddir"/>		
    </config>
</localConfig>
