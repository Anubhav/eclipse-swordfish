<mbeans-descriptors> 
    
    <mbean    name="Kernel"
        domain="sbb"
        type="org.eclipse.swordfish.core.components.iapi.impl.KernelBeanInstrumentation"
        description="SBB Kernel Instrumenation">
       
        <attribute  name="ParticipantId"
            description="Shows the participant identifier this kernel exclusively belongs to"
            type="java.lang.String"
            writeable="false"/>
            
        <attribute  name="LocationId"
            description="Shows the locationId this kernel is assigned to. All configurations are relative to this value"
            type="java.lang.String"
            writeable="false"/>
        
        <attribute  name="Active"
            description="If true, than this kernel is active and can be used. If false than the SBB behaviour is not predictable."
            type="java.lang.Boolean"
            writeable="false"/>
        
        <attribute  name="EndpointManager"
            description="Manages the internal management state of endpoints"
            type="javax.management.ObjectName"
            writeable="false"/>
        
    </mbean>
    
</mbeans-descriptors>
