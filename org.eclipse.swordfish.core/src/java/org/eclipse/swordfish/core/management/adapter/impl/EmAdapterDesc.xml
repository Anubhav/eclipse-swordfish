<mbeans-descriptors> 
    
    <mbean    name="ElementManagerAdapter"
        domain="sbb"
        type="org.eclipse.swordfish.sbb.EmAdapter"
        description="Connector for Element Manager">
           
        <attribute name="Host"
            description="Address under which the adapter can be reached"
            type="java.lang.String"
            writeable="false"/>
            
        <attribute name="Active"
            description="current state of the adapter"
            type="java.lang.Boolean"
            writeable="false"/>

    </mbean>
    
</mbeans-descriptors>
