<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "../../management/spring-beans.dtd">
<beans>
	<!-- Papi extensions -->

	<bean id="org.eclipse.swordfish.papi.extension.instrumentation.InstrumentationManager"
		class="org.eclipse.swordfish.core.components.extension.impl.DefaultExtensionFactory">
		<property name="instanceName"
			value="org.eclipse.swordfish.core.management.instrumentation.InstrumentationManagerProxy"/>
	</bean>

	<bean id="org.eclipse.swordfish.core.management.instrumentation.InstrumentationManagerProxy"
		class="org.eclipse.swordfish.core.management.instrumentation.InstrumentationManagerProxy">
		<property name="wrapped" ref="org.eclipse.swordfish.core.management.instrumentation.InstrumentationManager"/>
	</bean>

	<bean id="org.eclipse.swordfish.core.management.instrumentation.InstrumentationManager"
		class="org.eclipse.swordfish.core.management.instrumentation.impl.InstrumentationManagerBean" singleton="true">
		<property name="mbeanServer" ref="mbeanServer"/>
	</bean>

	<bean id="org.eclipse.swordfish.papi.adapter.extensions.operations.Operations"
		class="org.eclipse.swordfish.core.components.extension.impl.DefaultExtensionFactory">
		<property name="instanceName" value="org.eclipse.swordfish.core.management.operations.OperationsProxy"/>
	</bean>
	
	<bean id="org.eclipse.swordfish.core.management.operations.OperationsProxy" class="org.eclipse.swordfish.core.management.operations.OperationsProxy">
		<property name="wrapped" ref="org.eclipse.swordfish.core.management.operations.Operations"/>
	</bean>

	<bean id="org.eclipse.swordfish.core.management.operations.Operations"
		class="org.eclipse.swordfish.core.management.operations.impl.OperationsBean" singleton="true"> 
	</bean>

	<!-- MBeanServer -->

	<bean id="mbeanServer" class="org.springframework.jmx.support.MBeanServerFactoryBean"/>

	<!-- Connector for JMX console -->

	<bean id="org.eclipse.swordfish.core.management.adapter.JMXConnectorAdapter" class="org.eclipse.swordfish.core.management.adapter.impl.JMXConnectorAdapter"
		init-method="init" destroy-method="destroy">
		<property name="port" value="1099"/>
		<property name="jndiLocalPath" value="/jmxconnector"/>
		<property name="active" value="true"/>
		<property name="localRmi" value="true"/>
		<property name="mbeanServer" ref="mbeanServer"/>
		<property name="operations" ref="org.eclipse.swordfish.core.management.operations.Operations"/>
	</bean>

</beans>
