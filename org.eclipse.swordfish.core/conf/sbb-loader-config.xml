<!-- 
    Default configuartion for SBB internal classLoader.
    This default file must be laocted at META-INF/sbb-loader-config.xml within 
    the sbb-(web-)factory-imp.jar. May be overwritten by (in serach order)
      - sbb-loader-config.xml avialable from context classloader at SBB startup
      - sbb-loader-config.xml loacted in sbb install dir
      - sbb-loader-config.xml avaiable from classloader of SBB PAPI classes
      
    general format of this configuartion is 
        <SBBClassLoadingConfiguration>
            <ClassPath>                         // mandatory, entrys in any order, define load order
                <Jar path=".."/>                // zero to unbounded
                <Directory path=".."/>          // zero to unbounded
                <JarDirectory path=".."/>       // zero to unbounded
            </ClassPath>
            <SearchParentFirst>                 // optional, entrys in any order
                <Class name=".."/>              // zero to unbounded
                <Resource name=".."/>           // zero to unbounded
                <Package name=".."/>            // zero to unbounded
                <PackageTree name="..">         // zero to unbounded
                    <Exclude package=".."/>     // zero to unbounded
                    <ExcludeTree package=".."/> // zero to unbounded
                </PackageTree>
            </SearchParentFirst>
        <SBBClassLoadingConfiguration>
    
      - all 'path' attributes are considered relative to sbb base dir
        if not defining an absolute path. 
      - 'name' attribute of Class must be dot separated full name of 
        java class (e.g. 'java.lang.Object')
      - 'name' attribute of Resource must be slash separated name of
        resource (e.g. 'META-INF/sbb-loader-config.xml')
      - 'name' attribute of Package and PackageTree must be dot separated
        name of java package (e.g 'org.sax'  or  'java')
      - 'package' attribute of Exclude must be dot separated
        name of java package (e.g 'org.sax'  or  'java')
    
-->
<SBBClassLoadingConfiguration>
    <ClassPath>
        <!--  previously hard coded directorys holding patches and extensions. -->
        <JarDirectory path="lib/endorsed"/>
        <JarDirectory path="lib/ext"/>
        
        <!--  jars previously defined in bootstrap propertys. -->
        <Jar path="${MAVEN_REPO}/${ORACLE}/org.mortbay.jetty.jar"/>
        <Jar path="${MAVEN_REPO}/${ORACLE}/servlet.jar"/>
        <Jar path="${MAVEN_REPO}/${ORACLE}/orasaaj.jar"/>
        <Jar path="${MAVEN_REPO}/${ORACLE}/saaj-api.jar"/>
        <Jar path="${MAVEN_REPO}/${ORACLE}/jms.jar"/>
        <!-- xml-apis-2.8.1.jar should be before xmlparserv2.jar in the list as they contain common classes
        and xml-apis contain latest class version required for transformation interceptor.-->        
        <Jar path="${MAVEN_REPO}/${XERCES_XMLAPIS_JAR}"/>
        <Jar path="${MAVEN_REPO}/${ORACLE}/xmlparserv2.jar"/>
        <Jar path="${MAVEN_REPO}/${ORACLE}/xml.jar"/>
        <Jar path="${MAVEN_REPO}/${STAX_API_JAR}"/>
        <Jar path="${MAVEN_REPO}/${ORACLE}/orajbi.jar"/>
        <Jar path="${MAVEN_REPO}/${ORACLE}/dms.jar"/>
        <Jar path="${MAVEN_REPO}/${ORACLE}/dmsapp.jar"/>
        <Jar path="${MAVEN_REPO}/${ORACLE}/mail.jar"/>
        <Jar path="${MAVEN_REPO}/${ORACLE}/http_client.jar"/>
        <Jar path="${MAVEN_REPO}/${ORACLE}/jbi.jar"/>
        <Jar path="${MAVEN_REPO}/${ORACLE}/activation.jar"/>
        <Jar path="${MAVEN_REPO}/${ORACLE}/connector.jar"/>
        <Jar path="${MAVEN_REPO}/${ORACLE}/mx4j-tools.jar"/>
        <Jar path="${MAVEN_REPO}/${ORACLE}/mx4j-impl.jar"/>
        <Jar path="${MAVEN_REPO}/${ORACLE}/mx4j-rimpl.jar"/>
        <Jar path="${MAVEN_REPO}/${ORACLE}/mx4j-jmx.jar"/>
        <Jar path="${MAVEN_REPO}/${ORACLE}/mx4j-rjmx.jar"/>
        <Jar path="${MAVEN_REPO}/${ORACLE}/oc4jclient.jar"/>
        <Jar path="${MAVEN_REPO}/${WSDL4J}/wsdl4j-1.6.2.jar"/>
        <Jar path="${MAVEN_REPO}/${WSDL4J}/wsdl4j-extension-1.1.jar"/>
        <Jar path="${MAVEN_REPO}/${SOPWARE_CONTAINER_CONTROLLER_JAR}"/>
        <Jar path="${MAVEN_REPO}/${ORACLE}/jta.jar"/>
        <Jar path="${MAVEN_REPO}/${SLF4J}/jcl104-over-slf4j-${SLF4J_VERSION}.jar"/>
        <Jar path="${MAVEN_REPO}/${SLF4J}/slf4j-jdk14-${SLF4J_VERSION}.jar"/>
        <Jar path="${MAVEN_REPO}/backport-util-concurrent/jars/backport-util-concurrent-2.0_01_pd.jar" />
        <!-- no directorys (holding classes and resources directly) 
            <Directory path="xxx"/>
         -->
    </ClassPath>
    <SearchParentFirst>
        <!-- package trees to be searched in parent first.
             previously hard coded  -->
        <PackageTree name="java"/>
        <PackageTree name="javax">
            <ExcludeTree package="javax.xml.soap"/>
            <ExcludeTree package="javax.wsdl"/>
            <ExcludeTree package="javax.xml.transform.dom"/>
            <ExcludeTree package="javax.xml.validation"/>
        </PackageTree>
        
        <!-- packages to be searched in parent first.
             previously defined in excludePkg.properties -->
        <Package name="org.w3c.dom"/>
        <Package name="org.w3c.dom.ls"/>
        <Package name="org.xml.sax"/>
        <Package name="org.xml.sax.ext"/>
        <Package name="org.xml.sax.helpers"/>
        <Package name="org.apache.log4j"/>
        
        <!-- classes to be searched in parent first.
             previously defined in checkSuperLoader.properties  -->
        <Class name="org.apache.commons.logging.Log"/>
        
        <!-- resources to be searched in parent first. currently none
            <Resource name=".."/>
        -->
    </SearchParentFirst>
</SBBClassLoadingConfiguration>
