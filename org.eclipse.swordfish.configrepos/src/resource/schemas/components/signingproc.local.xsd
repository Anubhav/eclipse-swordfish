<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	elementFormDefault="qualified"
	targetNamespace="http://schemas.sopware.org/configuration/core/signingproc.local/1.0"
	xmlns:sopcs="http://schemas.sopware.org/configuration/generic/1.0"
	xmlns:sbbsip="http://schemas.sopware.org/configuration/core/signingproc.local/1.0">

	<xs:import
		namespace="http://schemas.sopware.org/configuration/generic/1.0"
		schemaLocation="../../../generic.xsd" />

	<xs:complexType name="SigningProcessorComponentType">
		<xs:complexContent>
			<xs:extension base="sopcs:ComponentType">
				<xs:all>
					<xs:element name="KeyStoreFile"
						type="sopcs:unnamedStringElementType" />
					<xs:element name="CheckCertificateValidity"
						type="sopcs:unnamedBooleanElementType" />
					<xs:element name="CheckCertificateIssuerTrust"
						type="sopcs:unnamedBooleanElementType" />
					<xs:element name="CheckCertificateSignature"
						type="sopcs:unnamedBooleanElementType" />
					<xs:element name="CheckCertificateRevocation"
						type="sopcs:unnamedBooleanElementType" />
					<xs:element name="KeyStorePassword"
						type="sopcs:unnamedStringElementType" />
					<xs:element name="KeyPassword"
						type="sopcs:unnamedStringElementType" />
					<xs:element name="KeyAlias"
						type="sopcs:unnamedStringElementType" />
					<xs:element name="certificateAlias"
						type="sopcs:unnamedStringElementType" />
					<xs:element name="signatureMethod"
						type="sopcs:unnamedStringElementType" />
				</xs:all>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>

	<xs:element name="SigningProcessor"
		type="sbbsip:SigningProcessorComponentType"
		substitutionGroup="sopcs:AbstractComponentElement" />

	<!--
		Don't use this for regular instantiation! This is just a mechanism to support
		the interface of the configuration repository service provider.
	-->
	<xs:element name="configuration">
		<xs:complexType>
			<xs:choice minOccurs="1" maxOccurs="unbounded">
				<xs:element ref="sbbsip:SigningProcessor" />
			</xs:choice>
		</xs:complexType>
	</xs:element>

</xs:schema>
