<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    <!-- 
        Message resources
    -->
    <bean id="messageSource"
        class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basenames">
            <list>
                <value>ConfigReposMessageBundle</value>
            </list>
        </property>
    </bean>
    
    <!-- Set some working directory -->
    <bean name="sbb_workdirectory" class="java.lang.String">
        <constructor-arg type="java.lang.String">
            <value>file:./target/test-classes/conf</value>
        </constructor-arg>
    </bean>
    <bean name="sp_workdirectory" class="java.lang.String">
        <constructor-arg type="java.lang.String">
            <value>classpath:./conf</value>
        </constructor-arg>
    </bean>
    <bean name="org.eclipse.swordfish.configrepos.springbeans.InstanceRemoteConfigSource"
        class="org.eclipse.swordfish.configrepos.configuration.sources.RemoteConfigurationSource"
        singleton="false" autowire="byName" />
    <bean name="org.eclipse.swordfish.configrepos.springbeans.ParticipantRemoteConfigSource"
        class="org.eclipse.swordfish.configrepos.configuration.sources.RemoteConfigurationSource"
        singleton="false" autowire="byName" />
    <bean id="org.eclipse.swordfish.configrepos.springbeans.ParticipantRemoteResourceSource"
        class="org.eclipse.swordfish.configrepos.resource.sources.RemoteResourceSource"
        singleton="false" autowire="byName"/>    
        
    <!-- -->
    <bean id="org.eclipse.swordfish.configrepos.springbeans.InstanceRemoteResourceSourceMock"
        class="org.eclipse.swordfish.configrepos.mock.RemoteResourceSourceProxyMock"/>
    <bean id="org.eclipse.swordfish.configrepos.springbeans.InstanceRemoteResourceSource"
        class="org.eclipse.swordfish.configrepos.resource.sources.RemoteResourceSource" singleton="false"
        autowire="byName">
        <property name="proxy"
            ref="org.eclipse.swordfish.configrepos.springbeans.InstanceRemoteResourceSourceMock"/>
    </bean>    
</beans>
