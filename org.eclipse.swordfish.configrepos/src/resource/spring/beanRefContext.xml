<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    <description>SOP Configuration Manager Spring Component: Instance Configuration</description>
    <bean id="org.eclipse.swordfish.configrepos.bootstrap_manager" lazy-init="true"
        class="org.springframework.context.support.ClassPathXmlApplicationContext">
        <constructor-arg>
            <list>
                <value>crmngrbeans_bootstrap_defaults.xml</value>
                <value>crmngrbeans_bootstrap.xml</value>
            </list>
        </constructor-arg>
    </bean>
    <bean id="org.eclipse.swordfish.configrepos.manager" lazy-init="true"
        class="org.springframework.context.support.ClassPathXmlApplicationContext">
        <constructor-arg>
            <list>
                <value>crmngrbeans_default.xml</value>
                <value>crmngrbeans_participant.xml</value>
            </list>
        </constructor-arg>
        <constructor-arg>
            <ref bean="org.eclipse.swordfish.configrepos.bootstrap_manager"/>
        </constructor-arg>
    </bean>
</beans>
