<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    <bean name="sourceA"
        class="org.eclipse.swordfish.configrepos.configuration.sources.DirectoryConfigurationSource">
        <property name="basePath">
            <value>./conf</value>
        </property>
        <property name="filename">
            <value>sourceA</value>
        </property>
        <property name="fixedScopePath">
            <value>/</value>
        </property>
    </bean>
    <bean name="sourceB"
        class="org.eclipse.swordfish.configrepos.configuration.sources.DirectoryConfigurationSource">
        <property name="basePath">
            <value>./conf</value>
        </property>
        <property name="filename">
            <value>sourceB</value>
        </property>
        <property name="fixedScopePath">
            <value>/</value>
        </property>
    </bean>
    <bean name="merger"
        class="org.eclipse.swordfish.configrepos.configuration.sources.XmlMergingConfigurationSource">
        <property name="configSources">
            <list>
                <ref bean="sourceA"/>
                <ref bean="sourceB"/>
            </list>
        </property>
    </bean>
</beans>
