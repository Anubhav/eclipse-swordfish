<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.eclipse.swordfish</groupId>
	<artifactId>org.eclipse.swordfish.samples.http
	</artifactId>
	<packaging>bundle</packaging>
	<name>org.eclipse.swordfish.samples.http
	</name>
	<version>${swordfishVersion}</version>
	<parent>
    		<groupId>org.eclipse.swordfish</groupId>
    		<artifactId>samples</artifactId>
    		<version>basic</version>
  	</parent>
	<description />
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${pom.artifactId}
						</Bundle-SymbolicName>
						<Import-Package>org.eclipse.swordfish.endpoints.http, com.ctc.wstx.stax, org.springframework.beans.factory.config, org.apache.servicemix.nmr.api, org.apache.servicemix.common.osgi, javax.jbi.component</Import-Package>
						<Private-Package>org.eclipse.swordfish.samples.http.*</Private-Package>
						 <Spring-Context>*;create-asynchronously:=false</Spring-Context>	
                          	<Require-Bundle>servicemix-http</Require-Bundle> 
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>